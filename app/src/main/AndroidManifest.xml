<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vpc3.personalexpensesapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalExpensesApp">
        <activity android:name=".activites.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.SettingsActivity" />
        <activity android:name=".activites.ExpensesActivity" />
        <activity
            android:name=".activites.RegistrationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activites.MainActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

</manifest>